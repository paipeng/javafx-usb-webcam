<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.paipeng.javafx.webcam.controller.WebCamViewController?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import com.paipeng.javafx.webcam.view.NanogridDecoderResultPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.paipeng.javafx.webcam.controller.WebCamViewController"
            prefHeight="600.0" prefWidth="880.0" >
    <top>
    </top>
    <left>

    </left>
    <center>
        <AnchorPane xmlns="http://javafx.com/javafx"
                    xmlns:fx="http://javafx.com/fxml"
                    prefHeight="600.0" prefWidth="860.0">
            <StackPane>
                <children>
                    <ImageView fx:id="previewImageView" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true"
                               preserveRatio="true"/>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </StackPane>
        </AnchorPane>
    </center>
    <right>
        <NanogridDecoderResultPane fx:id="nanogridDecoderResultPane" minWidth="100"/>
    </right>
    <bottom>
        <HBox>
            <Button fx:id="openButton" text="%open_webcam"></Button>
            <Button fx:id="captureButton" text="%capture_image"></Button>
            <TextField fx:id="fpsTextField"></TextField>
        </HBox>
    </bottom>
</BorderPane>
